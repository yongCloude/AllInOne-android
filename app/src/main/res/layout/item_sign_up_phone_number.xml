<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/signup_phone_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="@string/signup_phone_number_title" />

    <EditText
        android:id="@+id/signup_phone_number_first_input"
        android:layout_width="89dp"
        android:layout_height="39dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/box_border"
        android:inputType="phone"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_phone_number_title" />

    <EditText
        android:id="@+id/signup_phone_number_second_input"
        android:layout_width="89dp"
        android:layout_height="39dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/box_border"
        android:inputType="phone"
        android:paddingStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/signup_phone_number_first_input"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signup_phone_number_third_input"
        android:layout_width="89dp"
        android:layout_height="39dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/box_border"
        android:inputType="phone"
        android:paddingStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/signup_phone_number_second_input"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>